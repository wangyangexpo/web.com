  var ips_img_str = '<%= helpers.getIpsImg(ips)%>';
  var ips_img = ips_img_str.split(',');
  var ips_name_str = '<%= helpers.getIpsName(ips)%>';
  var ips_name = ips_name_str.split('|*|');
//  var ips_img = JSON.parse(ips_img_json);
  var pages_json = '<%= helpers.getCarToonPages(qtao)%>';
  var pages = pages_json.split(',');
</script>
<script src="<%=helpers.staticurl('/js/theatre.js')%>"></script>
