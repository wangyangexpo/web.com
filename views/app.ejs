<% include ./header.ejs %>
<!--<link rel="stylesheet" href="<%=helpers.staticurl('/css/base.css')%>" />-->
<link rel="stylesheet" href="<%=helpers.staticurl('/css/app_download.css')%>" />
<link rel="stylesheet" href="<%=helpers.staticurl('/css/app_download_old.css')%>" />
<div role="main" id="site-content">
  <div class="swiper-container">

    <div class="swiper-wrapper" id="swiperwrapper">
      <%if(banner&&banner.length >0){%>
        <% banner.forEach(function(item,index){ %>
        <div class="swiper-slide" style="background: url('<%=helpers.drawImage(item.basic_image_1)%>');background-position: center center;width: 100%;height: 720px;background-repeat: no-repeat;">
          <a href="http://www.putao.com/appinfo/<%=item.tag%>"></a>
        </div>
        <% }) %>
      <%}%>

    </div>
    <div class="pagination"></div>
  </div>
  <div class="main-concept gameSection">
    <div class="title-header">
      <div class="vl"></div>
      <span>游戏专区</span>
      <div class="vl"></div>
    </div>
    <div class="list-content">
      <%if(game&&game.length >0){%>
        <% game.forEach(function(item,index){ %>
        <div class="list-item bc<%=index+1%>">
          <div class="list-item-inner" data-href="/appinfo?tag=<%=item.tag||''%>&name=<%=helpers.encodeURIComponent(item.name)%>">
            <div class="list-header">
              <div class="app-icon">
                <a href="/appinfo?tag=<%=item.tag||''%>&name=<%=item.name%>"><img src="<%=helpers.drawImage(item.basic_image_1||'')%>"></a>
              </div>
              <a class="ht" href="/appinfo?tag=<%=item.tag||''%>&name=<%=item.name%>"><%=item.name||''%></a>
              <span class="subtitle"><%=item.title||''%></span>
            </div>
            <div class="text-body"><%-item.basic_content||''%></div>
          </div>
          <div class="dl_icon">
            <a href="<%=helpers.getAppInfo(item).ios_link%>" target="_blank">
              <i class="iconfont">&#xe60e;</i>
            </a>
            <a class="qcode_out_a" href="javascript:;">
              <i class="iconfont">&#xe618;</i>
            </a>
            <div class="qcode" style="display: none;">
              <img src="http://static.putaocdn.com/store/front/images/img_qrcode_download_hover@2x.png" alt="">
              <img class="code-sample" src="<%=helpers.drawImage(helpers.getAppInfo(item).qr)%>" alt="">
            </div>
          </div>
        </div>
        <% }) %>
      <% } %>
    </div>
  </div>
  <div class="main-concept gameSection">
    <div class="title-header">
      <div class="vl"></div>
      <span>应用专区</span>
      <div class="vl"></div>
    </div>
    <div class="list-content">
      <%if(app&&app.length >0){%>
        <% app.forEach(function(item,index){ %>
        <div class="list-item bc<%=index+1%>">
          <div class="list-item-inner" data-href="/appinfo?tag=<%=item.tag||''%>&name=<%=helpers.encodeURIComponent(item.name)%>">
            <div class="list-header">
              <div class="app-icon">
                <a href="/appinfo?tag=<%=item.tag||''%>&name=<%=item.name%>"><img src="<%=helpers.drawImage(item.basic_image_1||'')%>"></a>
              </div>
              <a class="ht" href="/appinfo?tag=<%=item.tag||''%>&name=<%=item.name%>"><%=item.name||''%></a>
              <span class="subtitle"><%=item.title||''%></span>
            </div>
            <div class="text-body"><%-item.basic_content||''%></div>
          </div>
          <div class="dl_icon">
            <a href="<%=helpers.getGameInfo(item).ios_link||''%>" target="_blank">
              <i class="iconfont">&#xe60e;</i>
            </a>
            <a href="<%=helpers.getGameInfo(item).android_link||''%>" target="_blank">
              <i class="iconfont">&#xe60d;</i>
            </a>
            <a class="qcode_out_a" href="javascript:;">
              <i class="iconfont">&#xe618;</i>
            </a>
            <div class="qcode" style="display: none;">
              <img src="http://static.putaocdn.com/store/front/images/img_qrcode_download_hover@2x.png" alt="">
              <img class="code-sample" src="<%=helpers.drawImage(helpers.getGameInfo(item).qr)%>" alt="">
            </div>
          </div>
        </div>
        <% }) %>
      <% } %>
      <div class="list-item comingsoon-item">
        <div class="comingsoon-inner">
          <img src="http://static.putaocdn.com/store/front/images/img_apps_comeing_soon.png">
        </div>
      </div>
    </div>
  </div>
</div>
<script src="<%=helpers.staticurl('/js/lib/jquery.min.js')%>"></script>
<script src="<%=helpers.staticurl('/js/lib/jquery.movingboxes.js')%>"></script>
<script src="<%=helpers.staticurl('/js/app_download.js')%>"></script>
<!--<script src="/js/app_download.js"></script>-->
<% include ./footer.ejs %>