<script>
	$(function() {
		function init() {
			var fworks = new Fireworks();
			$("#SpringFestival").show();
			window.sessionStorage.setItem("SpringFestival", "show");
			var time = window.setTimeout(function() {
				$("#SpringFestival").hide();
				window.sessionStorage.setItem("SpringFestival", "hide");
				clearTimeout(time);
			}, 5000);
		}

		if(window.sessionStorage.getItem("SpringFestival") == "hide") {
			return;
		} else {
			init();
		}

	});
</script>
